<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_EFF0F4"
    android:layout_height="match_parent">

    <TextView
       android:id="@+id/tv_set_pwd_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置6位数字支付密码"
        android:layout_marginTop="86dp"
        android:textColor="@color/color_19254D"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rubin.view.PayPwdView
        android:id="@+id/pay_pwd_view"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_set_pwd_tip_1" />

    <TextView
        android:id="@+id/tv_set_pwd_tip_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付密码不能是重复、连续的数字"
        android:layout_marginTop="19dp"
        android:textColor="@color/color_A4AABB"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pay_pwd_view" />


</androidx.constraintlayout.widget.ConstraintLayout>